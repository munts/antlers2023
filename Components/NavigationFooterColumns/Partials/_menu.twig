<ul class="menu" style="display:block;">
  {% for item in items %}
    <li class="item">
      <h3 class="title paragraph">
        {% if item.url|trim != '#' %}
          <a class="link" href="{{ item.url|e('esc_url') }}" {{ item.target == '_blank' ? 'target="_blank" rel="nofollow noreferrer noopener"' }}>
            {{ item.title|e }}
          </a>
        {% else %}
          {{ item.title|e }}
        {% endif %}
      </h3>
      {# {% if item.children %}
        <ul class="menu-children">
          {% for child in item.children %}
            <li class="item">
              <a class="link" href="{{ child.url|e('esc_url') }}" {{ child.target == '_blank' ? 'target="_blank" rel="nofollow noreferrer noopener"' }}>
                {{ child.title|e }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %} #}
    </li>
  {% endfor %}

  {% if socialPlatformsTitle and socialPlatforms %}
    <li class="item">
      <h3 class="title paragraph">
          {{ socialPlatformsTitle|e }}
      </h3>
      {% if socialPlatforms %}
        <ul class="menu-socialPlatforms">
          {% for item in socialPlatforms %}
            <li class="item">
              <a class="link" href="{{ item.url|e('esc_url') }}" target="_blank" rel="noopener noreferrer" aria-label="{{ item.platform.label }}">
                {{- item.icon }} {{ item.platform.label|e -}}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </li>
  {% endif %}
</ul>
