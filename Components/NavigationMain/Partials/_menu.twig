<ul data-ref="menu" id="navigationBurger-menu" class="menu">
  {% set i = 0 %}
  {% for item in items %}
    <li class="item {{- item.current ? ' current-menu-item' }}">
      {% set i = i + 1 %}
      <a class="link parent-{{i}}" href="{{ item.link|e('esc_url') }}" {{ item.target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}>{{ item.title }}</a>
      {% if item.children %}
                  <ul class="nav-drop menu-{{i}}">
                  {% set a = 0 %}
                      {% for child in item.children %}
                      {% set a = a + 1 %}
                        <li class="nav-drop-item nav-drop-item-{{a}}">
                          <a href="{{ child.link }}" class="link nav-drop-parent grandchild">{{ child.title }}</a>
                          {% if child.children %}
                            <ul class="nav-drop-two" style="columns: 2;">
                             {% set ii = 0 %}
                              {% for grandChild in child.children %}
                                {% if child|length > 1 %}
                                {% set ii = ii + 1 %}
                                <li class="nav-drop-item-two-{{ii}}">
                                  <a class="link grandchild" href="{{ grandChild.link }}">{{ grandChild.title }}</a>
                                  {% if grandChild.children %}
                                  <ul class="nav-drop-three">
                                    {% for greatGandChild in grandChild.children %}
                                      <li class="nav-drop-item-three">
                                        <a class="link" href="{{ greatGandChild.link }}">{{ greatGandChild.title }}</a>
                                      </li>
                                    {% endfor %}
                                  </ul>
                                {% endif %}
                                </li>
                                {% else %}
                                <li class="nav-drop-item-two">
                                  <a class="link" href="{{ grandChild.link }}">{{ grandChild.title }}</a>
                                  {% if grandChild.children %}
                                  <ul class="nav-drop-three">
                                    {% for greatGandChild in grandChild.children %}
                                      <li class="nav-drop-item-three">
                                        <a class="link"  href="{{ greatGandChild.link }}">{{ greatGandChild.title }}</a>
                                      </li>
                                    {% endfor %}
                                  </ul>
                                {% endif %}
                                </li>
                                {% endif %}
                              {% endfor %}
                            </ul>
                          {% endif %}
                        </li>
                      {% endfor %}
                  </ul>
                {% endif %}
    </li>
  {% endfor %}
</ul>
