<flynt-component name="BlockWysiwyg" class="{{ options.spacing == 'no' ? "componentSpacing" : "componentSpacingNone" }}" {{ options.theme ? 'data-theme="' ~ options.theme ~ '"' }}>
  <div class="container">
    <div class="content" data-size="{{ options.size }}" data-align="{{ options.align }}" data-text-align="{{ options.textAlign }}">
      {{ contentHtml|e('wp_kses_post') }}
      {% if ctaLabel %}
        <div class="cta-container" style="padding-bottom:30px;">
            <a href="{{ctaUrl}}" class="button">{{ctaLabel}}</a>
        </div>
      {% endif %}
    </div>
  </div>
</flynt-component>
