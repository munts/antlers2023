<flynt-component name="BlockClipPath" {{ options.theme ? 'data-theme="' ~ options.theme ~ '"' }}>
    <div class="clip-path-container"></div>
    <div class="container">
        <div class="tag-line-container">
            {% if heading != '' %}
                <h2 class="clipPath">{{heading}}</h2>
            {% else %}
                <h2 class="clipPath">{{post.title}}</h2>
            {% endif %}
            {# {{ contentHtml|e('wp_kses_post') }} #}
            {% if ctaLabel %}
            <div class="cta-container" style="padding-bottom:60px;">
                <a href="{{ctaURL}}" class="button">{{ctaLabel}}</a>
            </div>
            {% endif %}
            <div class="breadcrumb">
            {% if fn('yoast_breadcrumb') %}{% endif %}
            </div>
        </div>
    </div>
</flynt-component>
